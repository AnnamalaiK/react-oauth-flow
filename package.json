{
  "name": "react-oauth-flow",
  "version": "0.0.0-development",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "description": "A small library to simplify the use of OAuth2 inside your react applications",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adambrgmn/react-breadcrumbs.git"
  },
  "files": [
