    "semantic-release": "semantic-release"
  },
  "main": "dist/index.js",
  "module": "dist/react-breadcrumbs.esm.js",
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@fransvilhelm/hooks": "^2.0.1",
    "qs": "^6.9.1"
